{
    "name": "pith/framework",
    "description": "Pith Framework - Another simple framework for PHP sites",
    "require": {
        "php": "^7.1",
        "php-di/php-di": "^6"
    },
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Ian Maurmann",
            "role": "Developer"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "autoload": {
        "psr-4": {
            "Pith\\Framework\\": ["src/objects/", "src/interfaces/", "src/traits/"],
            "Pith\\WhiteModule\\": ["example/modules/white-module/"],
            "Pith\\GreenModule\\": ["example/modules/green-module/"]
        }
    }
}