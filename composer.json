{
    "name": "pith/framework",
    "description": "Pith Framework - Another simple framework for PHP sites",
    "authors": [
        {
            "name": "Ian Maurmann",
            "role": "Developer"
        }
    ],
    "license": "MPL-2.0",
    "require": {
        "php": "^7.1",
        "ext-readline": "*",
        "ext-json": "*",
        "php-di/php-di": "^6",
        "monolog/monolog": "^1.24",
        "lotfio/conso": "^1.7",
        "myclabs/php-enum": "^1.7",
        "ikm/copyright-year-utility":"^0.1"
    },
    "require-dev": {},
    "suggest": {
        "robmorgan/phinx":  "Suggested for database migrations",
        "phpunit/phpunit":  "Suggested for unit-testing"
    },
    "autoload": {
        "psr-4": {
            "Pith\\Framework\\": [
                "src/external/objects/",
                "src/external/interfaces/",
                "src/external/traits/",
                "src/external/extend/"
            ],
            "Pith\\Framework\\Internal\\": [
                "src/internal/objects/",
                "src/internal/interfaces/",
                "src/internal/traits/"
            ],
            "Pith\\PhtmlViewAdapter\\": [
                "src/plugins/phtml-view-adapter/src/"
            ],
            "Pith\\DatabaseWrapper\\": [
                "src/plugins/database-wrapper/src/"
            ],
            "Pith\\CommandTool\\": [
                "src/plugins/command-tool/src/"
            ],
            "Pith\\PithDotJson\\": [
                "src/plugins/pith-dot-json/src/"
            ],
            "Pith\\InternalUtilities\\": [
                "src/plugins/internal-utilities/src/"
            ],
            "Pith\\InternalAccessLevels\\": [
                "src/plugins/internal-access-levels/src/"
            ],
            "Pith\\ExampleModule\\": [
                "example/modules/example-module/",
                "example/modules/example-module/controllers/"
            ],
            "Pith\\ExampleConfig\\": [
                "example/config/"
            ]
        }
    }
}
