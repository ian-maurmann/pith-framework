{
    "name": "pith/framework",
    "description": "Pith Framework - Another simple framework for PHP sites",
    "authors": [
        {
            "name": "Ian Maurmann",
            "role": "Developer"
        }
    ],
    "license": "MPL-2.0",
    "require": {
        "php": "^8.1",
        "ext-readline": "*",
        "ext-json": "*",
        "php-di/php-di": "^6",
        "monolog/monolog": "^1.24",
        "lotfio/conso": "^1.7",
        "myclabs/php-enum": "^1.7",
        "ikm/copyright-year-utility":"^0.1",
        "nikic/fast-route": "^1.3",
        "symfony/http-foundation": "^6.0"
    },
    "suggest": {
        "robmorgan/phinx":  "Suggested for database migrations",
        "phpunit/phpunit":  "Suggested for unit-testing"
    },
    "autoload": {
        "psr-4": {
            "Pith\\Framework\\": [
                "src/external/objects/",
                "src/external/interfaces/",
                "src/external/traits/",
                "src/external/extend/"
            ],
            "Pith\\Framework\\Internal\\": [
                "src/internal/objects/",
                "src/internal/interfaces/",
                "src/internal/traits/",
                "src/internal/workflow/"
            ],
            "Pith\\PhtmlViewAdapter\\": [
                "src/plugins/phtml-view-adapter/src/"
            ],
            "Pith\\PhtmlViewAdapter2\\": [
                "src/plugins/phtml-view-adapter-2/src/"
            ],
            "Pith\\DatabaseWrapper\\": [
                "src/plugins/database-wrapper/src/"
            ],
            "Pith\\CommandTool\\": [
                "src/plugins/command-tool/src/"
            ],
            "Pith\\PithDotJson\\": [
                "src/plugins/pith-dot-json/src/"
            ],
            "Pith\\InternalUtilities\\": [
                "src/plugins/internal-utilities/src/"
            ],
            "Pith\\InternalAccessLevels\\": [
                "src/plugins/internal-access-levels/src/"
            ],
            "Pith\\ExampleModule\\": [
                "example/modules/example-module/",
                "example/modules/example-module/controllers/"
            ],
            "Pith\\ExampleConfig\\": [
                "example/config/"
            ],
            "Pith\\BlueSkyExampleModule\\": [
                "example-2/modules/blue-sky-module/",
                "example-2/modules/blue-sky-module/controllers/"
            ],
            "Pith\\BlueSkyExampleConfig\\": [
                "example-2/config/"
            ],
            "Pith\\ExampleAirshipPack\\": [
                "experimental/packs/example-airship-pack/",
                "experimental/packs/example-airship-pack/do-nothing",
                "experimental/packs/example-airship-pack/hello",
                "experimental/packs/example-airship-pack/hindenburg",
                "experimental/packs/example-airship-pack/index",
                "experimental/packs/example-airship-pack/jello",
                "experimental/packs/example-airship-pack/jello-layout",
                "experimental/packs/example-airship-pack/jello-partial"
            ],
            "Pith\\ExampleResourcePack\\": [
                "experimental/packs/example-resource-pack/",
                "experimental/packs/example-resource-pack/resources"
            ]
        }
    }
}
