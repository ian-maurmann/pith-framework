{
    "name": "pith/framework",
    "description": "Pith Framework - Another simple framework for PHP sites",
    "require": {
        "php": "^7.1",
        "php-di/php-di": "^6",
        "monolog/monolog": "^1.24"
    },
    "license": "MPL-2.0",
    "authors": [
        {
            "name": "Ian Maurmann",
            "role": "Developer"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^7"
    },
    "autoload": {
        "psr-4": {
            "Pith\\Framework\\": [
                "src/external/objects/",
                "src/external/interfaces/",
                "src/external/traits/",
                "src/external/extend/"
            ],
            "Pith\\Framework\\Internal\\": [
                "src/internal/objects/",
                "src/internal/interfaces/",
                "src/internal/traits/"
            ],
            "Pith\\Framework\\Adapter\\Phtml\\": [
                "src/plugins/view-adapters/phtml-adapter"
            ],
            "Pith\\ExampleModule\\": [
                "example/modules/example-module/",
                "example/modules/example-module/controllers/"
            ],
            "Pith\\ExampleConfig\\": [
                "example/config/"
            ]
        }
    }
}
